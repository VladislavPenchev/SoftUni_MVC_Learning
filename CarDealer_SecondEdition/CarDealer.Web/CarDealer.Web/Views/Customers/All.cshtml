@model AllCustomersModel

@{
    ViewData["Title"] = "All Customers";
}

<h2>All Customers</h2>

<h3>Ordered in @Model.OrderDirection.ToString().ToLower() direction</h3>


<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Birthdate
            </th>
            <th>
                Is Young Driver
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers
        {
            <tr>
                <td>
                    @customer.Name
                </td>
                <td>
                    @customer.Birthdate.ToShortTimeString()
                </td>
                <td>
                    @(customer.IsYoungDriver ? "Yes" : "No"))
                </td>
            </tr>
        }
    </tbody>
</table>